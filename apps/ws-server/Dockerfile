# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build ws-server`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t ws-server`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system ws-server && \
          adduser --system -G ws-server ws-server

COPY dist/apps/ws-server ws-server/
RUN chown -R ws-server:ws-server .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix ws-server --omit=dev -f install

CMD [ "node", "ws-server" ]
